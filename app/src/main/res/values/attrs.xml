<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="position">
        <enum name="left_top" value="0"/>
        <enum name="left_bottom" value="1"/>
        <enum name="right_top" value="2"/>
        <enum name="right_bottom" value="3"/>
    </attr>
    <attr name="arcMode">
        <enum name="circle" value="100"/>
        <enum name="line" value="101"/>
    </attr>
    <attr name="radius" format="dimension"/>

    <attr name="noteStatus">
        <enum name="titleShow" value="200"/>
        <enum name="titleHide" value="201"/>
    </attr>


    <declare-styleable name="MyNoteView">
        <attr name="viewTitleDate" format="string"/>
        <attr name="viewTitleTime" format="string"/>
        <attr name="viewContent" format="string"/>
        <attr name="imageIsExist" format="enum">
            <enum name="exist" value="1"/>
            <enum name="unExist" value="0"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="NoteBoxView">
        <attr name="noteStatus"/>
    </declare-styleable>

    <declare-styleable name="ArcMenuView">
        <attr name="position"/>
        <attr name="radius"/>
        <attr name="arcMode"/>
    </declare-styleable>

    <declare-styleable name="SettingShowView">
        <attr name="settingTitleText" format="string"/>
        <attr name="settingShowText" format="string"/>
    </declare-styleable>

    <declare-styleable name="SettingCheckView">
        <attr name="checkTitleText" format="string"/>
    </declare-styleable>

    <attr name="styleTextColor" format="color|reference"></attr>
    <attr name="mainBackground" format="color|reference"></attr>
    <attr name="styleTextColor55" format="color|reference"></attr>


</resources>