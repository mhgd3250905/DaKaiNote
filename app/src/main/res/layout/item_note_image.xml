<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:paddingTop="2dp">


    <skkk.gogogo.dakainote.View.MyImageView
        android:id="@id/iv_note_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        fresco:actualImageScaleType="centerInside"
        fresco:placeholderImage="@drawable/vector_drawable_image"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:visibility="gone"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false"
        android:padding="10dp"
        android:background="@color/colorTransPrimaryDark"
        android:id="@id/iv_note_image_delete"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@drawable/vector_drawable_delete"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>