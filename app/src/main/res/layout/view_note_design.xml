<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:text="20dp"
        android:layout_marginTop="5dp"
        android:id="@id/tv_view_note_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_view_note_title"
        android:orientation="horizontal">

        <TextView
            android:id="@id/tv_view_note_content"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.99"
            android:gravity="center_vertical" />

        <ImageView
            android:id="@id/iv_view_note_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/iv_view_note" />
    </LinearLayout>

    <TextView
        android:textColor="@color/colorGray"
        android:id="@id/tv_view_note_title_time"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_below="@id/linearLayout"
        android:layout_marginLeft="10dp"
        android:layout_weight="0.99"
        android:gravity="center_vertical" />


</RelativeLayout>