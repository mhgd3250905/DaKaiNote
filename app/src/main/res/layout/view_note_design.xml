<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <TextView
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:id="@id/tv_view_note_title_date"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:id="@id/tv_view_note_title_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_toRightOf="@id/tv_view_note_title_date" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/tv_view_note_title_date"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@id/tv_view_note_content"
            />
        <ImageView
            android:id="@id/iv_view_note_image"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/iv_view_note"/>
    </LinearLayout>

</RelativeLayout>